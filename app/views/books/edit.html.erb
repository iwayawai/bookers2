<div class="container">
 <div class="row">
  <div class="col-sm-12 col-me-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %>errors prohibited this obj from being saved:
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div>
<%= flash[:notice] %>
</div>

<%= form_with model:@book,url:book_path(@book.id),method: :patch do |f| %>

<div class="form-group">
<h4>Title</h4>
<%= f.text_field :title %>
</div>

<div class="form-group">
<h4>Opinion</h4>
<%= f.text_area :body %>
</div>

<div class="form-group">
<%= f.submit 'Update Book',class:"btn btn-success" %>
</div>

<%=link_to "Show",book_path(@book.id) %>
|
<%=link_to "Back",books_path %>
<% end %>
</div>
</div>
</div>